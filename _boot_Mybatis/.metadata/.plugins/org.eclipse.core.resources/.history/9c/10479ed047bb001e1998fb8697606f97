<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.example.demo.repogitory.CommentMapper">
  	
  	<insert id="insertPost">
  		insert into comment(bno, writer, content) values(#{bno}, #{writer}, #{content})
  	</insert>
  
  	<select id="getList" resultType="com.example.demo.domain.CommentVO">
  		select * from comment where bno=#{bno} order by cno desc limit #{pgvo.pageStart}, #{pgvo.qty}
  	</select>
  
  	<update id="updateModify">
  		update comment set content = #{content}, mod_at = now() where cno = #{cno}
  	</update>
  
  
  
  
  
  
  
  
 
  
  
  
  
  </mapper>