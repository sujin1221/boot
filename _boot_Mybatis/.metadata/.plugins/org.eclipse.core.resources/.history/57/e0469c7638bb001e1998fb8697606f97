<script th:inline="javascript">
    var isRe = '[[${isReg}]]';
    
    if (isRe === '1') {
        alert("게시글이 등록되었습니다.");
    }
</script>

<script th:inline="javascript">
    var isRe = '[[${isDel}]]';
    
    if (isRe === '1') {
        alert("게시글이 삭제되었습니다.");
    }
</script>
