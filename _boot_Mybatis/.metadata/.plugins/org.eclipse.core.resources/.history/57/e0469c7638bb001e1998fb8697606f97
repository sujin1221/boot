 </thead>
 
  <tbody>
				<tr th:each="bvo : ${list}">
					<th scope="row" th:text="${bvo.bno}"></th>
					<td><a th:href="@{/board/detail(bno=${bvo.bno})}"
						th:text="${bvo.title}"></a></td>
					<td th:text="${bvo.writer}"></td>
					<td th:text="${bvo.content}"></td>
					<td th:text="${bvo.modAt}"></td>
				</tr>
			</tbody>
  </table>

	<!-- 페이지네이션 라인 -->
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <li th:if="${ph.prev}" class="page-item">
      <a class="page-link" th:href="@{/board/list(pageNo=${ph.startPage-1},qty=${ph.pgvo.qty})}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    
    <!-- th:classappend: 동적클래스 추가 -->
    <th:block></th:block>
    <li th:each="i:${#numbers.sequence(ph.startPage,ph.endPage)}" class="page-item" th:classappend="${ph.pgvo.pageNo == i ? 'active':''}" aria-current="page">
    <a class="page-link" th:href="@{/board/list(pageNo=${i},qty=${ph.pgvo.qty})}">[[${i}]]</a>
    </li>
    
    <li th:if="${ph.next}" class="page-item">
      <a class="page-link" th:href="@{/board/list(pageNo=${ph.endPage+1},qty=${ph.pgvo.qty})}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>











</th:block>
