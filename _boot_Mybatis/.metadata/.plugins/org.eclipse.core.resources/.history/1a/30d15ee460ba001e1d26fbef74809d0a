<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.example.demo.repogitory.BoardMapper">
	  
	<insert id="insert">
	  	insert into board(title, writer, content) values(#{title}, #{writer}, #{content}) 
	</insert>
  
	<select id="selectList" resultType="com.example.demo.domain.BoardVO">
		select * from board order by bno desc;
	</select>
  
  	<update id="updateModify">
  		update board set title = #{title}, content = #{content}, reg_date = now() where bno = #{bno}
  	</update>
  
  	<select id="selectDetail" resultType="com.example.demo.domain.BoardVO">
  		select * from board where bno = #{bno}
  	</select>
  
  	<delete id="delete">
  		update board set where bno = #{bno} 
  	</delete>
  

  </mapper>